<% title "Setup" %>

<h1 class="h2 text-center mb-4">New Application setup</h1>

<%= form_with(url: app_create_path, local: true) do |form| %>
  <% if @nexmo_app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nexmo_app.errors.count, "error") %> prohibited this Nexmo app from being saved:</h2>
      <ul>
      <% @nexmo_app.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4 col-xl-3 text-center">
      <div class="form-group">
        <%= form.text_field "nexmo_app[name]", class:"form-control", value: @nexmo_app.name, placeholder: "Application name", required: true %>
      </div>

       <%= form.submit "Create", class: 'btn btn-primary mt-2' %>
    </div>
  </div>
<% end %>

